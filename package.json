{
  "name": "pong",
  "private": true,
  "version": "0.1.0",
  "description": "Demo multi-player pong on Cloud Run with MongoDB",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "webpack": "webpack",
    "webpack-server-xxx": "webpack server --quiet --no-info",
    "webpack-server": "webpack server --env mode=development --env host=ws://localhost:8081",
    "tsc": "tsc",
    "dev-server": "PORT=8081 tsc-watch --noClear -p ./tsconfig.json --onSuccess 'node --experimental-specifier-resolution=node ./dist/server/main.js'",
    "build": "tsc && webpack",
    "predev": "npm run clean",
    "dev": "NODE_ENV=development concurrently 'npm run webpack-server' 'npm run dev-server'",
    "start": "node --experimental-specifier-resolution=node ./dist/server/main.js",
    "test": "echo 'No tests' && exit 0"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "p5": "^1.4.2",
    "protobufjs": "^7.0.0",
    "uuid": "^8.3.2",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.6",
    "@types/p5": "^1.4.2",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.5.3",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "del": "^6.1.1",
    "nodemon": "^2.0.19",
    "ts-loader": "^9.3.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3"
  }
}
