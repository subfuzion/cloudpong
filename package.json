{
  "name": "pong",
  "private": true,
  "version": "0.1.0",
  "description": "Demo multi-player pong on Cloud Run with MongoDB",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc && webpack",
    "test": "echo 'No tests' && exit 0",
    "✅ FRONTEND ⬇": ":",
    "webpack": "webpack",
    "serve-watch-frontend": "webpack server --env MODE=development --env PONGHOST=ws://localhost:8081",
    "✅ BACKEND ⬇": ":",
    "tsc": "tsc",
    "serve-watch-backend": "PORT=8081 tsc-watch --noClear -p ./tsconfig.json --onSuccess 'node --experimental-specifier-resolution=node ./dist/server/main.js'",
    "✅ DEV ⬇": ":",
    "predev": "npm run clean",
    "dev": "NODE_ENV=development concurrently 'npm run serve-watch-frontend' 'npm run serve-watch-backend'",
    "✅ PRODUCTION ⬇": ":",
    "start": "node --experimental-specifier-resolution=node ./dist/server/main.js"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "express": "^4.18.1",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0",
    "p5": "^1.4.2",
    "protobufjs": "^7.0.0",
    "uuid": "^8.3.2",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.6.5",
    "@types/p5": "^1.4.2",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.5.3",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.3.0",
    "copy-webpack-plugin": "^11.0.0",
    "del": "^7.0.0",
    "nodemon": "^2.0.19",
    "ts-loader": "^9.3.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3"
  }
}
